<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    >

    <TextView
        android:id="@+id/train_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:text="全程马拉松"
        />


    <TextView
        android:id="@+id/txt_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="开始 2016/10/12"
        android:textSize="12dp"
        android:layout_below="@id/train_record_title"
        />

    <TextView
        android:id="@+id/txt_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="结束2016/10/20"
        android:textSize="12sp"
        android:layout_below="@id/txt_start_date"
        />

    <com.huami.watch.train.ui.widget.CircleProgressView
        android:id="@+id/circle_progress_view"
        android:layout_width="40.9dp"
        android:layout_height="44.2dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/txt_progress_level"
        android:layout_width="31.5dp"
        android:layout_height="31.5dp"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:text="32%"
        android:gravity="center"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/train_complete_rate"
        android:textSize="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/circle_progress_view"
        android:visibility="visible"
        />



</RelativeLayout>