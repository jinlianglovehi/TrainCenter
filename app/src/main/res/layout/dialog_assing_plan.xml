<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/default_background_black"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/icon_notify_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:background="@mipmap/training_icon_already_custom"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/train_plan_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:text="@string/assing_train_plan"
        android:textSize="16sp"
        android:layout_below="@id/icon_notify_complete"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        style="@style/base_white_font_24"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_below="@id/train_plan_remind"
        android:text="@string/train_plan_already_assgn"
        style="@style/base_white_font_14"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>