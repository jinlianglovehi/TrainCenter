<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_train_center_init"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/train_center_loading"
        android:layout_width="match_parent"
        android:src="@mipmap/training_widget_icon"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/train_center_init_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        style="@style/remind_fist_time_text"
        android:layout_alignParentBottom="true"
        android:text="@string/remind_train_first_text"
        />

    <TextView
        android:id="@+id/train_center_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:text="@string/train_center"
        style="@style/train_init_title"
        android:layout_above="@+id/train_center_loading"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />
</RelativeLayout>