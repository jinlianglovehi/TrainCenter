    <!--默认的字体的样式 -->
    <style name="sport_history_list_item_unit" >
        <item name="android:shadowRadius">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/default_font_color_white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="train_center_font_color">
        <item name="android:textColor">@color/default_font_color_white</item>
    </style>


    <!--训练中心 的 init select 界面-->
    <!-- 训练中心的title-->
    <style name="mytrain_trainplan_title">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="train_record_detail_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="mytrain_trainplan_stage">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--训练中心 item -->
    <style name="mytrain_trainplan_list_item" parent="train_center_font_color">
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="train_small_remide_green">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!--训练init 初始化界面-->
    <style name="remind_fist_time_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="train_init_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.7sp</item>
    </style>

    <!--训练的详情中的内容-->


    <style name="train_status_detail_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.7sp</item>


    </style>

    <!--训练阶段-->
    <style name="train_status_detail_stag">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="train_detail_rich_text_title">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>



    </style>

    <style name="train_detail_green_remind">

        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>


    </style>

    <!--训练详情的item 样式-->
    <style name="train_detail_bottom">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!--选择训练计划后的 widget 提醒 内容-->
    <style name="train_widget_remind_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="base_white_line">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_white_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="base_gray_line">
        <item name="android:background">@color/gray_color</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>


    <style name="text_layout_center">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>


    <!--训练数字内容-->
    <style name="train_record_detail_number" >

        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/train_plan_detail_train_number</item>
    </style>


    <!--自定义dialog-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!--&lt;!&ndash;#00000000&ndash;&gt;透明-->
        <item name="android:background">@color/default_background_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="base_dialog" parent="android:style/Theme.Dialog">
        <!--&lt;!&ndash;&lt;!&ndash;#00000000&ndash;&gt;透明&ndash;&gt;-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/default_background_black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>


    <style name="train_plan_detail_train_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="train_plan_detail_train_number">
        <item name="android:layout_marginTop">6.5dp</item>
        <item name="android:textColor">@color/train_plan_detail_train_number</item>
        <item name="android:textSize">36sp</item>
    </style>
    
    <style name="train_record_detail_margin">

        <item name="android:layout_marginLeft">25dp</item>

        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="train_center_theme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>



</resources>
